PUID=1000
PGID=1000
TZ=Europe/Moscow
URL=fzbw.ru
SUBDOMAINS=wildcard
VALIDATION=dns
CERTPROVIDER=letsencrypt
DNSPLUGIN=cloudflare
ONLY_SUBDOMAINS=false
EMAIL=you@example.com

# SWAG auto-reload
AUTO_RELOAD=true
SWAG_AUTORELOAD_WATCHLIST=/config/nginx/site-confs|/config/nginx/proxy-confs

# Cloudflare API credentials for DNS validation
# Option 1: Use API Key (Global API Key)
# CF_API_EMAIL=your-email@cloudflare.com
# CF_API_KEY=your-global-api-key

# Option 2: Use API Token (Recommended - more secure)
CF_API_TOKEN=your-zone-edit-token

# Notes
# - Use CF_API_TOKEN OR CF_API_EMAIL+CF_API_KEY
# - Copy this file to .env and set real values